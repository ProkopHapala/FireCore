
units           metal
atom_style      full
boundary        f f f

pair_style      lj/cut/coul/cut 17.0
bond_style      harmonic
angle_style     cosine/periodic
dihedral_style  harmonic
improper_style  fourier

read_data       init.data

pair_coeff      * * 0.0 2.0
pair_coeff      1 1 0.004553230950000 3.430850963558450 # C_R C_R
pair_coeff      1 2 0.003441919068288 3.274498238524820 # C_R O_R
pair_coeff      1 3 0.003441919068288 3.274498238524820 # C_R O_2
pair_coeff      1 4 0.002947483401756 3.000992332055730 # C_R H_
pair_coeff      2 2 0.002601846250000 3.118145513491190 # O_R O_R
pair_coeff      2 3 0.002601846250000 3.118145513491190 # O_R O_2
pair_coeff      2 4 0.002228088018238 2.844639607022100 # O_R H_
pair_coeff      3 3 0.002601846250000 3.118145513491190 # O_2 O_2
pair_coeff      3 4 0.002228088018238 2.844639607022100 # O_2 H_
pair_coeff      4 4 0.001908020590000 2.571133700553020 # H_ H_

special_bonds   lj/coul 0.0 0.0 1.0

pair_coeff * * 0.0 2.0             # switch off lj
set type 1*4 charge 0.0            # switch off coul
bond_coeff * 0.0 2.0               # switch off bonds
angle_coeff * 0.0 1 1              # switch off angles
#dihedral_coeff * 0.0 1 1           # switch off dihedrals
improper_coeff * 0.0 1.0 1.0 1.0 0 # switch off impropers

thermo          1
thermo_style    custom etotal
thermo_modify   format float %23.15g

dump            traj all custom 1 traj.lammpstrj id xu yu zu fx fy fz
dump_modify     traj sort id
dump_modify     traj format float %23.15g

run             0
