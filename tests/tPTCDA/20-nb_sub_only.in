
units           metal
atom_style      full
boundary        p p p
#boundary        f f f

pair_style      hybrid/overlay lj/cut 15.0 morse 15.0
bond_style      harmonic
angle_style     cosine/periodic
dihedral_style  harmonic
improper_style  fourier

read_data       init.data

pair_coeff      * * lj/cut 0.0 2.0
pair_coeff      1 1 lj/cut 0.004553230950000 3.430850963558450 # C_R C_R
pair_coeff      1 2 lj/cut 0.003441919068288 3.274498238524820 # C_R O_R
pair_coeff      1 3 lj/cut 0.003441919068288 3.274498238524820 # C_R O_2
pair_coeff      1 4 lj/cut 0.002947483401756 3.000992332055730 # C_R H_
pair_coeff      2 2 lj/cut 0.002601846250000 3.118145513491190 # O_R O_R
pair_coeff      2 3 lj/cut 0.002601846250000 3.118145513491190 # O_R O_2
pair_coeff      2 4 lj/cut 0.002228088018238 2.844639607022100 # O_R H_
pair_coeff      3 3 lj/cut 0.002601846250000 3.118145513491190 # O_2 O_2
pair_coeff      3 4 lj/cut 0.002228088018238 2.844639607022100 # O_2 H_
pair_coeff      4 4 lj/cut 0.001908020590000 2.571133700553020 # H_ H_
pair_coeff      * * morse 0.0 2.0 1.5
pair_coeff      1 5 morse 0.002433804318158 1.5	3.4170  # C_R Na
pair_coeff      1 6 morse 0.006694805404142 1.5	3.8990  # C_R Cl
pair_coeff      2 5 morse 0.001839783130515 1.5	3.2415  # O_R Na
pair_coeff      2 6 morse 0.005060797186005 1.5	3.7235  # O_R Cl
pair_coeff      3 5 morse 0.001839783130515 1.5	3.2415  # O_2 Na
pair_coeff      3 6 morse 0.005060797186005 1.5	3.7235  # O_2 Cl
pair_coeff      4 5 morse 0.001575496149804 1.5	2.9345  # H_ Na
pair_coeff      4 6 morse 0.004333807800084 1.5	3.4165  # H_ Cl

special_bonds   lj/coul 0.0 0.0 1.0

pair_coeff * * lj/cut 0.0 2.0      # switch off lj
#pair_coeff * * morse 0.0 2.0 1.5   # switch off morse
bond_coeff * 0.0 2.0               # switch off bonds
angle_coeff * 0.0 1 1              # switch off angles
dihedral_coeff * 0.0 1 1           # switch off dihedrals
improper_coeff * 0.0 1.0 1.0 1.0 0 # switch off impropers

thermo          1
thermo_style    custom etotal
thermo_modify   format float %23.15g

dump            traj all custom 1 traj.lammpstrj id xu yu zu fx fy fz
dump_modify     traj sort id
dump_modify     traj format float %23.15g

run             0
